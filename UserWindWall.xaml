<Window x:Class="MyNewProject.UserWindWall"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyNewProject"
             mc:Ignorable="d" 
             Width="400" Height="400"                    
             d:DesignHeight="500" d:DesignWidth="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50px"/>
        </Grid.RowDefinitions>
        <ListBox x:Name="AllWallsView" 
                 Grid.Row="0"
                 HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" />
        <Button Click="ListOfWalls" Content="Выгрузить" Grid.Row="1" HorizontalAlignment="Center"  VerticalAlignment="Center"/>
    </Grid>

</Window>
